<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center|center_horizontal"
    android:orientation="horizontal">

   <LinearLayout
       android:orientation="horizontal"
       android:layout_weight="1"
       android:layout_width="0dp"
       android:layout_height="wrap_content">
       <androidx.cardview.widget.CardView
           app:cardCornerRadius="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
          <LinearLayout
              android:layout_marginHorizontal="10dp"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <ImageButton
                  android:minWidth="48dp"
                  android:minHeight="48dp"
                  android:src="@drawable/baseline_insert_emoticon_24"
                  android:background="@android:color/transparent"
                  android:id="@+id/emoticon"
                  app:tint="@color/icon_color"
                  android:contentDescription="@string/insert_emoticon"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
              <EditText
                  android:minHeight="48dp"
                  android:padding="10dp"
                  android:background="@drawable/rounded_edit_text"
                  android:id="@+id/edit_text"
                  android:layout_marginHorizontal="10dp"
                  android:hint="@string/insert_message"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:autofillHints=""
                  android:inputType="text" />
              <ImageButton
                  android:minWidth="48dp"
                  android:minHeight="48dp"
                  android:contentDescription="@string/send_a_photo"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  app:tint="@color/icon_color"
                  android:background="@android:color/transparent"
                  android:src="@drawable/baseline_photo_camera_24"
                  />
          </LinearLayout>
       </androidx.cardview.widget.CardView>
   </LinearLayout>
   <androidx.cardview.widget.CardView
       app:cardBackgroundColor="@color/md_theme_dark_inversePrimary"
       android:layout_marginLeft="15dp"
       app:cardCornerRadius="30dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <ImageButton
           android:minWidth="48dp"
           android:minHeight="48dp"
           android:id="@+id/send_message"
           app:tint="@android:color/white"
           android:contentDescription="@string/send_message"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@android:color/transparent"
           android:src="@drawable/ic_baseline_send_24"/>
   </androidx.cardview.widget.CardView>

</LinearLayout>